<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web
  Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <!-- servletタグでは、web.xml内で使用するserlvetの名前定義とクラスの紐付けを行う -->
  <servlet>
  <!-- ①web.xml内で使用するservletの名前を定義 -->
    <servlet-name>OutputServlet</servlet-name>
    <!-- ②「①」で定義した名前にクラスを紐付ける -->
    <servlet-class>jp.co.nagatake.servlet.OutputServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InputServlet</servlet-name>
    <servlet-class>jp.co.nagatake.servlet.InputServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateSelectServlet</servlet-name>
    <servlet-class>jp.co.nagatake.servlet.UpdateSelectServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>jp.co.nagatake.servlet.UpdateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>jp.co.nagatake.servlet.DeleteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>jp.co.nagatake.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>jp.co.nagatake.servlet.LogoutServlet</servlet-class>
  </servlet>
  <!-- servlet-mappingタグでは、servletタグで定義したservletとurlのマッピングを行う -->
  <servlet-mapping>
  <!-- ③「①」で定義した名前を使用する -->
    <servlet-name>OutputServlet</servlet-name>
    <!-- ④「①」で定義したservletとurlをマッピングする -->
    <url-pattern>/OutputServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InputServlet</servlet-name>
    <url-pattern>/InputServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateSelectServlet</servlet-name>
    <url-pattern>/UpdateSelectServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/UpdateServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/DeleteServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>